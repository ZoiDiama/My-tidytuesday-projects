#Title R-Ladies Chapter Events
#load libraries 
library(tidyverse)
library(showtext)
library(ggtext)
library(tidytuesdayR)
library(glue)
library(Cairo)
library(waffle)



#1.DATA LOADING
tuesdata <- tidytuesdayR::tt_load(2023, week = 47)
rladies_chapters <- tuesdata$rladies_chapters
glimpse(rladies_chapters)

#2.DATA WRANGLING
#preparing the dataset
#Data for the plot
dt<-rladies_chapters %>% 
 group_by(year,location) %>% 
  summarise(n=n()) %>% 
  ungroup()

#3. PLOT VIZUALIZATION 
## Load Google fonts (https://fonts.google.com/)
font_add_google("Roboto", family = "title")                           
font_add_google("Lato", family = "subtitle")  
showtext::showtext_auto()
showtext::showtext_opts(dpi = 300) 

##Title,subtitle & caption 
tt <- str_glue("R-Ladies Global: Empowering Data Science Diversity")
st <- str_glue(stringr::str_wrap("The graph below showcases the ever-increasing number of events held since 2012â€”both online and in person. It's a testament to the vibrant and growing community that R-Ladies Global has fostered.",
                                 width=100))
ct  <- str_glue(stringr::str_wrap("Data Source:  rladies meetup-archive | 
                                  Creator:Zoi Diamantakou | tidytuesday | 2023, 
                                  week 47",width=100))

##plot
colors<-c("#F26BE9","#BAD9D3")

p<-ggplot(data = dt,aes(fill = location, values = n)) +
  geom_waffle(na.rm = TRUE,
              color = "white", 
              size = .25, 
              n_rows = 10, 
              flip = TRUE) +
  facet_wrap(
    ~year, 
    nrow = 1, 
    strip.position = "bottom"
  ) +
  scale_x_discrete() + 
  scale_y_continuous(
    labels = function(x) x * 10,
    expand = c(0,0)
  ) +
  scale_fill_manual(values = colors) +
  coord_equal() +
  labs(
    x = "", y = "",
    title = tt,
    subtitle = ,
    caption = ct
  ) +
  theme_minimal(
    base_family = "Roboto Condensed"
  ) 
p+
  theme(
    panel.grid = element_blank(), 
    axis.ticks.y = element_blank(),
    plot.title  = element_text(
      family= 'title',
      face= "bold",
      size= 30,
      colour="#88398A",
      margin= margin(t = 16, b = 5)),
    plot.subtitle = element_text(
      family= 'subtitle', 
      color="#88398A",
      lineheight= 0.9,
      size  = 12,
      margin= margin(t = 5, b = 10)),
    plot.caption =element_text(colour="black"),
    axis.text.y = element_blank(),
    legend.position = "none",
    plot.background = element_rect(fill="white",color = NA),
    strip.text.x = element_text(size = 12,colour="black"
  ) ) +
  guides(fill = guide_legend(reverse = TRUE))

## theme

#4. SAVE THE PLOT
ggsave("TT2023Week47.svg", width = 12, height = 8, 
       dpi = 300, bg = "white") 

